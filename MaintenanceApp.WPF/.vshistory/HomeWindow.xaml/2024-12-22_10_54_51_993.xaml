<UserControl
    x:Class="MaintenanceApp.WPF.HomeWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MaintenanceApp.WPF"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800">
    <Grid>
        <!-- الخلفية -->
        <Grid.Background>
            <LinearGradientBrush
                StartPoint="0,0"
                EndPoint="1,1">
                <GradientStop
                    Color="Black"
                    Offset="0" />
                <GradientStop
                    Color="#1A1A1A"
                    Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>
        <!-- العنوان -->
        <TextBlock
            Text="White Whale"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Margin="0,50,0,0"
            Foreground="White"
            FontSize="64"
            FontWeight="Bold" />
        <!-- الشعار -->
        <Image
            Source="Images/WhiteWhaleHome.png"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Margin="0,150,0,0"
            Width="150"
            Height="150" />
        <!-- الأجهزة -->
        <StackPanel
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Margin="0,0,0,100">
            <!-- مثال على الأجهزة -->
            <Image
                Source="Images/fridge.png"
                Width="120"
                Height="120" />
            <Image
                Source="Images/freezer.png"
                Width="120"
                Height="120" />
            <Image
                Source="Images/dishwasher.png"
                Width="120"
                Height="120" />
            <Image
                Source="Images/washing_machine.png"
                Width="120"
                Height="120" />
        </StackPanel>
        <!-- النصوص الإضافية -->
        <TextBlock
            Text="Hitachi"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Margin="50,0,0,50"
            Foreground="White"
            FontSize="24"
            FontWeight="Bold" />
        <TextBlock
            Text="Hotline: 19118"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Margin="0,0,50,50"
            Foreground="White"
            FontSize="24"
            FontWeight="Bold" />
    </Grid>
</UserControl>
