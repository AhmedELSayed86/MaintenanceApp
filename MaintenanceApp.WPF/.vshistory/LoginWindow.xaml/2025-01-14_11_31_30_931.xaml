<Window
    x:Class="MaintenanceApp.WPF.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Convert="clr-namespace:MaintenanceApp.WPF.Converters"
    xmlns:local="clr-namespace:MaintenanceApp.WPF.Helper"
    mc:Ignorable="d"
    xmlns:wpftoolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
    Title="Login"
    Height="350"
    Width="300"
    Background="#222222"
    WindowStyle="None"
    ResizeMode="NoResize"
    FlowDirection="RightToLeft"
    WindowState="Normal"
    WindowStartupLocation="CenterScreen"
    FontSize="15"
    FontWeight="Bold"
    FontFamily="Times New Roman">
    <Window.Resources>
        <Convert:TextToVisibilityConverter
            x:Key="TextToVisibilityConverter" />
    </Window.Resources>
    <Grid>
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Width="300">
            <TextBlock
                Text="Login"
                FontSize="24"
                Foreground="White"
                HorizontalAlignment="Center"
                Margin="0,0,0,20" />
            <Grid>
                <TextBox
                    x:Name="UsernameTextBox"
                    Background="#404040"
                    Foreground="White"
                    Margin="5"
                    Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock
                    Text="User Name"
                    Foreground="Gray"
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    IsHitTestVisible="False"
                    Visibility="{Binding Text, ElementName=UsernameTextBox, Converter={StaticResource TextToVisibilityConverter}}" />
            </Grid>
            <Grid>
                <PasswordBox
                    x:Name="Password_Box"
                    Background="#404040"
                    Foreground="White" VerticalAlignment="Center"
                    Margin="5"
                    local:PasswordBoxHelper.BindPassword="True"
                    local:PasswordBoxHelper.BoundPassword="{Binding UserPassword, Mode=TwoWay}" />
                <TextBlock
                    Text="....."
                    Foreground="White"
                    FontSize="40"
                    Margin="8,0,0,0"
                    Height="65"
                    VerticalAlignment="Top"
                    IsHitTestVisible="False"
                    Visibility="{Binding Password, ElementName=Password_Box, Converter={StaticResource TextToVisibilityConverter}}" />
            </Grid>
            <Button
                Content="Login"
                Command="{Binding LoginCommand}"
                Width="120"
                Margin="5"
                IsDefault="True"
                HorizontalContentAlignment="Center"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center" />
            <Button
                x:Name="RegisterButton"
                Content="Register"
                Width="120"
                Margin="0,0,0,10"
                Background="#007ACC"
                Foreground="White" />
            <Button
                x:Name="ChangePasswordButton"
                Content="Change Password"
                Width="120"
                Margin="0,0,0,10"
                Background="#007ACC"
                Foreground="White" />
            <Button
                x:Name="LoginButton"
                Content="Cancel"
                Width="120"
                Margin="0,0,0,10"
                Background="Red"
                Foreground="White"
                Command="{Binding ClosedCommand}" />
        </StackPanel>
    </Grid>
</Window>
