<Window
    x:Class="MaintenanceApp.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:MaintenanceApp.WPF"
    xmlns:ViewModel="clr-namespace:MaintenanceApp.WPF.ViewModels"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    mc:Ignorable="d"
    Title="Maintenance Records"
    Loaded="Window_Loaded"
    Height="450"
    Width="800"
    Background="#222222"
    WindowStyle="None"
    ResizeMode="NoResize"
    FlowDirection="RightToLeft"
    WindowState="Normal"
    FontSize="15"
    FontWeight="Bold"
    FontFamily="Times New Roman">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="50" />
            <RowDefinition
                Height="*" />
        </Grid.RowDefinitions>
        <!-- Form for Adding New Record -->
        <Grid
            Grid.Row="0"
            Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="*" />
                <ColumnDefinition
                    Width="50" />
            </Grid.ColumnDefinitions>
            <ScrollViewer
                HorizontalScrollBarVisibility="Auto"
                VerticalScrollBarVisibility="Auto"
                CanContentScroll="True"
                PanningMode="HorizontalOnly"
                Grid.Row="0"
                Grid.Column="0">
                <StackPanel
                    Grid.Row="0"
                    Orientation="Horizontal">
                    <Button
                        Content="الرئيسية"
                        Command="{Binding  OpenHomeCommand }"
                        Margin="5"
                        Foreground="AliceBlue"
                        Background="DeepSkyBlue" />
                    <Button
                        Content="التتميم"
                        Command="{Binding OpeneImplementedCommand}"
                        Margin="5"
                        Foreground="AliceBlue"
                        Background="Green" />
                    <Button
                        Content="العهدة"
                        Command="{Binding  }"
                        Margin="5"
                        Foreground="AliceBlue"
                        Background="Green" />
                    <Button
                        Content="قطع الغيار"
                        Command="{Binding  }"
                        Margin="5"
                        Foreground="AliceBlue"
                        Background="Green" />
                    <Button
                        Content="الفنيين"
                        Command="{Binding  OpeneEmployeeCommand}"
                        Margin="5"
                        Foreground="AliceBlue"
                        Background="Green" />
                    <Button
                        Content="إضافة بلاغات"
                        Command="{Binding  OpeneImportExcelNotificationsCommand }"
                        Margin="5"
                        Foreground="AliceBlue"
                        Background="Green" />
                    <Button
                        Content="طباعة"
                        Command="{Binding  OpenPrintCommand }"
                        Margin="5"
                        Foreground="AliceBlue"
                        Background="Green" />
                    <Button
                        Content="Log In"
                        Command="{Binding LogInCommand}"
                        Width="80"
                        Height="30"
                        Margin="5"                   
                        Foreground="AliceBlue"
                        Background="CornflowerBlue" />
                    <Button
                        Content="Log Out"
                        Command="{Binding LogOutCommand}"
                        Width="80"
                        Height="30"
                        Margin="5"                                       
                        Foreground="AliceBlue"
                        Background="CadetBlue" />
                </StackPanel>
            </ScrollViewer>
            <Button
                Content="EXIT"
                Command="{Binding  ApplicationShutdownCommand}"
                Grid.Row="0"
                Height="25" 
                Width="40"
                Grid.Column="1"
                Foreground="White"
              
                Background="{Binding EXITBackground}" />
        </Grid>
        <!-- Table of Records -->
        <Border
            BorderBrush="Yellow"
            BorderThickness="2"
            Grid.Row="1"
            Margin="5">
            <ContentControl
                x:Name="MainContentControl"
                Grid.ColumnSpan="2" />
        </Border>
    </Grid>
</Window>
