<Window
    x:Class="MaintenanceApp.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:MaintenanceApp.WPF"
    xmlns:ViewModel="clr-namespace:MaintenanceApp.WPF.ViewModels"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    mc:Ignorable="d"
    Title="Maintenance Records"
    Loaded="Window_Loaded"
    Height="450"
    Width="800"
    Background="#222222"
    WindowStyle="None"
    ResizeMode="NoResize"
    FlowDirection="RightToLeft"
    WindowState="Normal"
    FontSize="15"
    FontWeight="Bold"
    FontFamily="Times New Roman">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="50" />
            <RowDefinition
                Height="*" />
            <RowDefinition
                Height="30" />
        </Grid.RowDefinitions>
        <!-- Form for Adding New Record -->
        <Grid
            Grid.Row="0"
            Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="*" />
                <ColumnDefinition
                    Width="50" />
            </Grid.ColumnDefinitions>
            <ScrollViewer
                HorizontalScrollBarVisibility="Auto"
                VerticalScrollBarVisibility="Auto"
                CanContentScroll="True"
                PanningMode="HorizontalOnly"
                Grid.Row="0"
                Grid.Column="0">
                <StackPanel
                    Grid.Row="0"
                    Orientation="Horizontal">
                    <StackPanel
                        Grid.Row="0"
                        Orientation="Horizontal">
                        <TextBlock
                            Width="80"
                            Text="{Binding CurrentUserName}" />
                    </StackPanel>
                    <Button
                        Content="الرئيسية"
                        Command="{Binding  OpenHomeCommand }"
                        Margin="5"
                        Foreground="AliceBlue"
                        Background="DeepSkyBlue" />
                    <Button
                        Content="التتميم"
                        Command="{Binding OpeneImplementedCommand}"
                        Margin="5"
                        Foreground="AliceBlue"
                        Background="Green" />
                    <Button
                        Content="العهدة"
                        Command="{Binding  }"
                        Margin="5"
                        Foreground="AliceBlue"
                        Background="Green" />
                    <Button
                        Content="قطع الغيار"
                        Command="{Binding  }"
                        Margin="5"
                        Foreground="AliceBlue"
                        Background="Green" />
                    <Button
                        Content="الفنيين"
                        Command="{Binding  OpeneEmployeeCommand}"
                        Margin="5"
                        Foreground="AliceBlue"
                        Background="Green" />
                    <Button
                        Content="إضافة بلاغات"
                        Command="{Binding  OpeneImportExcelNotificationsCommand }"
                        Margin="5"
                        Foreground="AliceBlue"
                        Background="Green" />
                    <Button
                        Content="طباعة"
                        Command="{Binding  OpenPrintCommand }"
                        Margin="5"
                        Foreground="AliceBlue"
                        Background="Green" />
                    <Button
                        Content="Log In"
                        Command="{Binding LogInCommand}"
                        Width="80"
                        Height="30"
                        Margin="5"
                        Foreground="AliceBlue"
                        Background="CornflowerBlue" />
                    <Button
                        Content="Log Out"
                        Command="{Binding LogOutCommand}"
                        Width="80"
                        Height="30"
                        Margin="5"
                        Foreground="AliceBlue"
                        Background="CadetBlue" />
                </StackPanel>
            </ScrollViewer>
            <Button
                Content="EXIT"
                Command="{Binding  ApplicationShutdownCommand}"
                Grid.Row="0"
                Grid.Column="1">
                <Button.Style>
                    <Style
                        TargetType="{x:Type Button}">
                        <Setter
                            Property="Background"
                            Value="Transparent" />
                        <Setter
                            Property="Foreground"
                            Value="Gray" />
                        <Setter
                            Property="IsTabStop"
                            Value="False" />
                        <Setter
                            Property="Template">
                            <Setter.Value>
                                <ControlTemplate
                                    TargetType="{x:Type Button}">
                                    <Border
                                        BorderThickness="1"
                                        BorderBrush="Gray"
                                        Background="{TemplateBinding Background}"
                                        Height="25">
                                        <Grid>
                                            <ContentPresenter
                                                x:Name="MyContentPresenter"
                                                Content="{TemplateBinding Content}"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Margin="5,0,5,0" />
                                        </Grid>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger
                                            Property="IsMouseOver"
                                            Value="True">
                                            <Setter
                                                Property="Foreground"
                                                Value="White" />
                                            <Setter
                                                Property="Background"
                                                Value="Red" />
                                        </Trigger>
                                        <Trigger
                                            Property="IsPressed"
                                            Value="True">
                                            <Setter
                                                Property="Background"
                                                Value="IndianRed" />
                                            <Setter
                                                Property="Foreground"
                                                Value="Black" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
        <!-- Table of Records -->
        <Border
            BorderBrush="Yellow"
            BorderThickness="2"
            Grid.Row="1"
            Margin="5">
            <ContentControl
                x:Name="MainContentControl"
                Grid.ColumnSpan="2" />
        </Border>
        <Border
            BorderBrush="Green"
            BorderThickness="1"
            Grid.Row="2"
            Margin="5,0">
            <TextBlock
                x:Name="txtSummary"
                Text="{Binding Summary}"
                FontSize="11"  FontWeight="Normal"
                Foreground="White"
                TextWrapping="Wrap" Margin="5,0.5"/>
        </Border>
    </Grid>
</Window>
