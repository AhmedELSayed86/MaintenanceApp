<UserControl
    x:Class="YourNamespace.AddDataView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="إضافة بيانات"
    Height="400"
    Width="600"> 
    <Grid
        Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="*" />
            <RowDefinition
                Height="Auto" />
        </Grid.RowDefinitions>
        <!-- النموذج: الحقول -->
        <StackPanel
            Grid.Row="0"
            Margin="0 10 0 20">
            <TextBlock
                Text="اسم الزائر:" />
            <TextBox
                Text="{Binding NewRecord.VisitorName, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock
                Text="تاريخ الزيارة:"
                Margin="0,10,0,0" />
            <DatePicker
                SelectedDate="{Binding NewRecord.VisitDate, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock
                Text="نوع الزيارة:"
                Margin="0,10,0,0" />
            <ComboBox
                ItemsSource="{Binding VisitTypes}"
                SelectedItem="{Binding NewRecord.VisitType, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>
        <!-- عرض البيانات -->
        <DataGrid
            Grid.Row="1"
            ItemsSource="{Binding ExistingRecords}"
            AutoGenerateColumns="False"
            CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Header="اسم الزائر"
                    Binding="{Binding VisitorName}" />
                <DataGridTextColumn
                    Header="تاريخ الزيارة"
                    Binding="{Binding VisitDate, StringFormat=\{0:yyyy-MM-dd\}}" />
                <DataGridTextColumn
                    Header="نوع الزيارة"
                    Binding="{Binding VisitType}" />
            </DataGrid.Columns>
        </DataGrid>
        <!-- الأزرار -->
        <StackPanel
            Grid.Row="2"
            Orientation="Horizontal"
            HorizontalAlignment="Right"
            Margin="0,10,0,0">
            <Button
                Content="حفظ"
                Command="{Binding SaveCommand}"
                Margin="5" />
            <Button
                Content="إلغاء"
                Command="{Binding CancelCommand}"
                Margin="5" />
        </StackPanel>
    </Grid>
</UserControl>
