<Window
    x:Class="MaintenanceApp.WPF.Views.EmployeeWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:MaintenanceApp.WPF.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    mc:Ignorable="d"
    WindowStartupLocation="CenterScreen"
    Title="Maintenance Records"
    WindowStyle="ThreeDBorderWindow"
    ResizeMode="NoResize"
    FlowDirection="RightToLeft"
    WindowState="Normal"
    Height="450"
    Width="800"
    FontSize="15"
    FontWeight="Bold"
    Background="#222222">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="50" />
            <RowDefinition
                Height="50" />
            <RowDefinition
                Height="Auto" />
        </Grid.RowDefinitions>
        <Button
            Grid.Row="0"
            Command="{Binding ImportEmployeesCommand}" />
        <TextBlock
            Text="{Binding Summry}"
            Foreground="LawnGreen"
            Grid.Row="1" />
        <!-- Table of Records -->
        <Grid
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Margin="0,0,0,5">
            <!-- جدول البيانات -->
            <DataGrid
                Grid.Row="1"
                ItemsSource="{Binding FilteredSAPDataRecords}"
                AutoGenerateColumns="False"
                SelectedItem="{Binding SelectedSAPData, Mode=TwoWay}"
                SelectionMode="Single"
                IsReadOnly="True"
                FlowDirection="RightToLeft"
                Foreground="White"
                FontSize="16"
                FontWeight="Bold"
                FontFamily="Times New Roman"
                HeadersVisibility="Column"
                ScrollViewer.HorizontalScrollBarVisibility="Auto"
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                CanUserAddRows="False"
                Background="Black"
                RowBackground="#111"
                AlternatingRowBackground="#333"
                BorderBrush="LightGreen"
                BorderThickness="3"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center">
                <DataGrid.InputBindings>
                    <MouseBinding
                        Gesture="LeftDoubleClick"
                        Command="{Binding RowSelectedCommand}"
                        CommandParameter="{Binding SelectedItem, RelativeSource={RelativeSource AncestorType=DataGrid}}" />
                </DataGrid.InputBindings>
                <!-- تحسين الهيدر -->
                <DataGrid.ColumnHeaderStyle>
                    <Style
                        TargetType="DataGridColumnHeader">
                        <Setter
                            Property="Background"
                            Value="Black" />
                        <Setter
                            Property="Foreground"
                            Value="White" />
                        <Setter
                            Property="FontSize"
                            Value="18" />
                        <Setter
                            Property="FontFamily"
                            Value="Times New Roman" />
                        <Setter
                            Property="FontWeight"
                            Value="Bold" />
                        <Setter
                            Property="HorizontalContentAlignment"
                            Value="Center" />
                        <Setter
                            Property="Padding"
                            Value="10,5" />
                        <Setter
                            Property="BorderBrush"
                            Value="LightGreen" />
                        <Setter
                            Property="BorderThickness"
                            Value="1" />
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                <!-- نمط الخلية مع خطوط الشبكة باللون الأخضر الفاتح -->
                <DataGrid.CellStyle>
                    <Style
                        TargetType="DataGridCell">
                        <Setter
                            Property="BorderBrush"
                            Value="LightGreen" />
                        <Setter
                            Property="BorderThickness"
                            Value="1" />
                        <Setter
                            Property="Margin"
                            Value="-1" />
                        <Setter
                            Property="FontSize"
                            Value="14" />
                        <Setter
                            Property="FontFamily"
                            Value="Times New Roman" />
                        <Setter
                            Property="FontWeight"
                            Value="Bold" />
                        <Setter
                            Property="Height"
                            Value="35" />
                        <Setter
                            Property="HorizontalContentAlignment"
                            Value="Center" />
                        <Setter
                            Property="VerticalContentAlignment"
                            Value="Center" />
                    </Style>
                </DataGrid.CellStyle>
                <!-- الأعمدة المخصصة -->
                <DataGrid.Columns>
                    <DataGridTemplateColumn
                        Header="Notification"
                        Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox
                                    Padding="2"
                                    IsReadOnly="True"
                                    Background="#00000033"
                                    Foreground="White"
                                    SelectionBrush="Red"
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    Text="{Binding  Notification }" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn
                        Header="NotificationType"
                        Width="50">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Height="26"
                                    Padding="2"
                                    TextWrapping="Wrap"
                                    TextAlignment="Center"
                                    VerticalAlignment="Center"
                                    Text="{Binding NotificationType}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn
                        Header="Region">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Height="Auto"
                                    Padding="2"
                                    TextAlignment="Center"
                                    VerticalAlignment="Center"
                                    Text="{Binding Region}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn
                        Header="City">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Height="26"
                                    Width="85"
                                    Padding="2"
                                    VerticalAlignment="Center"
                                    TextAlignment="Center"
                                    Text="{Binding City}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn
                        Header="Street">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Height="26"
                                    Width="85"
                                    Padding="2"
                                    VerticalAlignment="Center"
                                    TextAlignment="Center"
                                    Text="{Binding Street}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn
                        Header="ListName"
                        Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Padding="2"
                                    VerticalAlignment="Center"
                                    TextAlignment="Center"
                                    Text="{Binding ListName}"
                                    TextWrapping="Wrap"
                                    Background="#00000033"
                                    Foreground="White" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn
                        Header="Telephone">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Height="26"
                                    Width="85"
                                    VerticalAlignment="Center"
                                    TextAlignment="Center"
                                    Text="{Binding Telephone}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn
                        Header="District">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Height="26"
                                    Width="85"
                                    VerticalAlignment="Center"
                                    TextAlignment="Center"
                                    Text="{Binding District}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn
                        Header="NotifDate">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Height="26"
                                    Width="85"
                                    VerticalAlignment="Center"
                                    TextAlignment="Center"
                                    Text="{Binding NotifDate}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn
                        Header="Description">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Height="26"
                                    Width="85"
                                    VerticalAlignment="Center"
                                    TextAlignment="Center"
                                    Text="{Binding Description}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn
                        Header="MainWorkCtr">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Height="26"
                                    Width="85"
                                    VerticalAlignment="Center"
                                    TextAlignment="Center"
                                    Text="{Binding MainWorkCtr}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn
                        Header="SortField">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Height="26"
                                    Width="85"
                                    VerticalAlignment="Center"
                                    TextAlignment="Center"
                                    Text="{Binding SortField}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn
                        Header="BreakdownDuration">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Height="26"
                                    Width="85"
                                    VerticalAlignment="Center"
                                    TextAlignment="Center"
                                    Text="{Binding BreakdownDuration}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn
                        Header="RequiredEnd">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Height="26"
                                    Width="85"
                                    VerticalAlignment="Center"
                                    TextAlignment="Center"
                                    Text="{Binding RequiredEnd}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            <!-- Message if no records -->
            <TextBlock
                Text="لم يتم العثور على بلاغات"
                Foreground="Red"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="18"
                Visibility="Collapsed" />
            <!--Visibility="{Binding HasData, Converter={StaticResource BooleanToVisibilityConverter}}" />-->
        </Grid>
    </Grid>
</Window>
