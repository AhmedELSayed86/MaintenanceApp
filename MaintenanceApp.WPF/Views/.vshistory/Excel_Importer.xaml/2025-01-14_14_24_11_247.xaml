<Page x:Class="MaintenanceApp.WPF.Views.Excel_ImporterWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MaintenanceApp.WPF.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Excel_Importer">

    <Grid>
        <StackPanel
            Grid.Row="0">
            <Button
                Content="تحميل بيانات الموظفين من الاكسيل"
                Background="SaddleBrown"
                Foreground="White"
                Margin="3"
                Command="{Binding LoadExcelEmployeesCommand}" />
            <Button
                Content="حفظ بيانات الموظفين"
                Background="Green"
                Foreground="White"
                Margin="3"
                Command="{Binding ImportEmployeesCommand}" />
        </StackPanel>
    </Grid>
</Page>
