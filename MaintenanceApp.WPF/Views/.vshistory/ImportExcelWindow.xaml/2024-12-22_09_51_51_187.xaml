<UserControl
    x:Class="MaintenanceApp.WPF.Views.ImportExcelWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    FlowDirection="RightToLeft" >
    <Grid
        Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="*" />
            <RowDefinition
                Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel
            Orientation="Horizontal"
            Margin="0,0,0,10">
            <Button
                Content="تحميل ملف Excel"
                Width="120"
                Margin="0,0,10,0"
                Command="{Binding LoadExcelCommand}" />
            <Button
                Content="حفظ إلى قاعدة البيانات"
                Width="160"
                Command="{Binding SaveToDatabaseCommand}" />
            <Button
                Content="إغلاق"
                Width="100"
                Margin="10,0,0,0"
                Command="{Binding CloseCommand}" />
        </StackPanel>
        <DataGrid
            ItemsSource="{Binding ExcelData}"
            AutoGenerateColumns="True"
            IsReadOnly="True"
            Grid.Row="1" />
        <TextBlock
            Text="{Binding Summary}"
            Grid.Row="2"
            Margin="10,10,0,0"
            FontWeight="Bold"
            TextWrapping="Wrap" />
    </Grid>
</UserControl>