<UserControl
    x:Class="MaintenanceApp.WPF.Views.ImportExcelWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    FlowDirection="RightToLeft" >
    <Grid
        Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="*" />
            <RowDefinition
                Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel
            Orientation="Horizontal"
            Margin="0,0,0,10">
            <Button
                Content="تحميل ملف Excel"
                Width="120"
                Margin="0,0,10,0"
                Command="{Binding LoadExcelCommand}" />
            <Button
                Content="حفظ إلى قاعدة البيانات"
                Width="160"
                Command="{Binding SaveToDatabaseCommand}" />
            <Button
                Content="إغلاق"
                Width="100"
                Margin="10,0,0,0"
                Command="{Binding CloseCommand}" />
        </StackPanel>
        <DataGrid
            ItemsSource="{Binding ExcelData}"
            Grid.Row="1"
            AutoGenerateColumns="False"
            SelectionMode="Single"
            IsReadOnly="True"
            FlowDirection="RightToLeft"
            Foreground="White"
            FontSize="16"
            FontWeight="Bold"
            FontFamily="Times New Roman"
            HeadersVisibility="Column"
            ScrollViewer.HorizontalScrollBarVisibility="Auto"
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            CanUserAddRows="False"
            Background="Black"
            RowBackground="#111"
            AlternatingRowBackground="#333"
            BorderBrush="LightGreen"
            BorderThickness="3"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center">
            <!-- تحسين الهيدر -->
            <DataGrid.ColumnHeaderStyle>
                <Style
                    TargetType="DataGridColumnHeader">
                    <Setter
                        Property="Background"
                        Value="Black" />
                    <Setter
                        Property="Foreground"
                        Value="White" />
                    <Setter
                        Property="FontSize"
                        Value="18" />
                    <Setter
                        Property="FontFamily"
                        Value="Times New
         Roman" />
                    <Setter
                        Property="FontWeight"
                        Value="Bold" />
                    <Setter
                        Property="HorizontalContentAlignment"
                        Value="Center" />
                    <Setter
                        Property="Padding"
                        Value="10,5" />
                    <Setter
                        Property="BorderBrush"
                        Value="LightGreen" />
                    <Setter
                        Property="BorderThickness"
                        Value="1" />
                </Style>
            </DataGrid.ColumnHeaderStyle>
            <!-- نمط الخلية مع خطوط الشبكة باللون الأخضر الفاتح -->
            <DataGrid.CellStyle>
                <Style
                    TargetType="DataGridCell">
                    <Setter
                        Property="BorderBrush"
                        Value="LightGreen" />
                    <Setter
                        Property="BorderThickness"
                        Value="1" />
                    <Setter
                        Property="Margin"
                        Value="-1" />
                    <Setter
                        Property="FontSize"
                        Value="18" />
                    <Setter
                        Property="FontFamily"
                        Value="Times New Roman" />
                    <Setter
                        Property="FontWeight"
                        Value="Bold" />
                    <Setter
                        Property="Height"
                        Value="35" />
                    <Setter
                        Property="HorizontalContentAlignment"
                        Value="Center" />
                    <Setter
                        Property="VerticalContentAlignment"
                        Value="Center" />
                </Style>
            </DataGrid.CellStyle>
            <!-- الأعمدة المخصصة -->
            <DataGrid.Columns>
                <DataGridTemplateColumn
                    Header="Notification">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox
                                Height="26"
                                Padding="2"
                                IsReadOnly="True"
                                Background="#00000033"
                                Foreground="White"
                                SelectionBrush="Red"
                                TextAlignment="Center"
                                HorizontalAlignment="Center"
                                Text="{Binding Path= Notification }" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn
                    Header="NotificationType">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Height="26"
                                Padding="2"
                                TextWrapping="Wrap"
                                TextAlignment="Center"
                                VerticalAlignment="Center"
                                Text="{Binding Path=NotificationType}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn
                    Header="Region">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Height="Auto"
                                Padding="2"
                                TextAlignment="Center"
                                VerticalAlignment="Center"
                                Text="{Binding Path=Region}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn
                    Header="City">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Height="26"
                                Width="85"
                                Padding="2"
                                VerticalAlignment="Center"
                                TextAlignment="Center"
                                Text="{Binding Path=City}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn
                    Header="Street">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Height="26"
                                Width="85"
                                Padding="2"
                                VerticalAlignment="Center"
                                TextAlignment="Center"
                                Text="{Binding Path=Street}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn
                    Header="ListName">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Height="26"
                                Width="55"
                                Padding="2"
                                VerticalAlignment="Center"
                                TextAlignment="Center"
                                Text="{Binding Path=ListName}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn
                    Header="Telephone">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Height="26"
                                Width="85"
                                VerticalAlignment="Center"
                                TextAlignment="Center"
                                Text="{Binding Path=Telephone}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn
                    Header="District">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Height="26"
                                Width="85"
                                VerticalAlignment="Center"
                                TextAlignment="Center"
                                Text="{Binding Path=District}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn
                    Header="NotifDate">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Height="26"
                                Width="85"
                                VerticalAlignment="Center"
                                TextAlignment="Center"
                                Text="{Binding Path=NotifDate}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn
                    Header="Description">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Height="26"
                                Width="85"
                                VerticalAlignment="Center"
                                TextAlignment="Center"
                                Text="{Binding Path=Description}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn
                    Header="MainWorkCtr">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Height="26"
                                Width="85"
                                VerticalAlignment="Center"
                                TextAlignment="Center"
                                Text="{Binding Path=MainWorkCtr}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn
                    Header="SortField">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Height="26"
                                Width="85"
                                VerticalAlignment="Center"
                                TextAlignment="Center"
                                Text="{Binding Path=SortField}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn
                    Header="BreakdownDuration">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Height="26"
                                Width="85"
                                VerticalAlignment="Center"
                                TextAlignment="Center"
                                Text="{Binding Path=BreakdownDuration}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn
                    Header="RequiredEnd">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Height="26"
                                Width="85"
                                VerticalAlignment="Center"
                                TextAlignment="Center"
                                Text="{Binding Path=RequiredEnd}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn
                    Header="VisitDate">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Height="26"
                                Width="85"
                                VerticalAlignment="Center"
                                TextAlignment="Center"
                                Text="{Binding Path=VisitDate}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn
                    Header="Technician">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Height="26"
                                Width="85"
                                VerticalAlignment="Center"
                                TextAlignment="Center"
                                Text="{Binding Path=Technician}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn
                    Header="ServiceDetails">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Height="26"
                                Width="85"
                                VerticalAlignment="Center"
                                TextAlignment="Center"
                                Text="{Binding Path=ServiceDetails}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn
                    Header="Implemented">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Height="26"
                                Width="85"
                                VerticalAlignment="Center"
                                TextAlignment="Center"
                                Text="{Binding Path=Implemented}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn
                    Header="DeterminationTechnician">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Height="26"
                                Width="85"
                                VerticalAlignment="Center"
                                TextAlignment="Center"
                                Text="{Binding Path=DeterminationTechnician}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <TextBlock
            Text="{Binding Summary}"
            Grid.Row="2"
            Margin="10,10,0,0"
            FontWeight="Bold"
            TextWrapping="Wrap" />
    </Grid>
</UserControl>